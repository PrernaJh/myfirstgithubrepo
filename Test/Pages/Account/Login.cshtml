@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<head>
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/sb-admin.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>

<body class="background-img-globe">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">
                <h5>Package Tracker Web Portal</h5>
            </div>
            <div class="card-body">
                <h6>Please enter your account details to continue.</h6>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input asp-for="Input.Username" class="form-control" placeholder="Username" required="required" />
                            <label asp-for="Input.Username">Username</label>
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Password" class="form-control" placeholder="Password" required="required" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </div>
                </form>
                <div>
                    <a class="btn btn-link btn-sm btn-block" role="button" href="@Url.Action("ForgotPassword","Account")">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/wwwroot/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
