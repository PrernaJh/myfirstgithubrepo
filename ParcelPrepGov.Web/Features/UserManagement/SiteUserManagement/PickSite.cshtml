@model List<string>

<div class="content">
    <h2 class="content-block">User Management - Pick Site</h2>

    <div class="list-container content-block">
        @foreach (var item in Model)
        {
            <div class="list-item">
                @Html.ActionLink(item, "Site", "SiteUserManagement", new { id = item })
                <br />
            </div>
        }

        @if (User.IsAdministrator() || User.IsSystemAdministrator())
        {
            <div class="list-item">
                @Html.ActionLink("All Sites", "Site", "SiteUserManagement", new { id = "All" })
                <br />
            </div>
        }
    </div>
</div>