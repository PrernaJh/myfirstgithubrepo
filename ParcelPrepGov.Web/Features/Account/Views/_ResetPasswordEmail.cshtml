@model ParcelPrepGov.Web.Features.Account.Models.ResetPasswordEmailViewModel


<p>Hi @Model.Name,</p>

<p>You recently requested to reset your password for your Mail Manifest System account. Click the button below to reset it.</p>

<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td>
            <table border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td bgcolor="#ff5722" style="padding: 12px 18px 12px 18px; border-radius:3px" align="center"><a href="@Model.Link" target="_blank" style="font-size: 16px; font-family: Helvetica, Arial, sans-serif; font-weight: normal; color: #ffffff; text-decoration: none; display: inline-block;">Reset your password &rarr;</a></td>
                </tr>
            </table>
        </td>
    </tr>
